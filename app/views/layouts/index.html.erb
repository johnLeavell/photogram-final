<h1>List of users</h1>

<table border="1">
<tbody>
  <tr>
    <th>Username</th>
    <th>Private?</th>
    <th></th>
    <th></th>
    <% @list_of_users.each do |user| %>
    <tr>
    <td><%= user.username%></td>
      <% if user.private  == true %>
    <td>Yes</td>
      <% else %>
    <td>No</td>
      <% end %>
    <td>
      <form action="/insert_follow_request" method="post">
        <input type="hidden" name="query_recipient_id" value="<% user.id %>">
        <input type="hidden" name="query_sender_id" value="<% user.id%>">
        <input type="hidden" name="query_status" value="pending">
       <button>Follow</button>
      </form>
    </td>
    <td>Show details</td>
    </tr>
    <% end %>
  </tr>
  </tbody>
</table>
