<div>
  <div>
    <h1>
      List of photos
    </h1>
  </div>
</div>

<div>
    <form action="/insert_photo" method="post">
        <label for="browser_input">
          Image
        </label>

        <input type="file" id="browser_input" name="query_image" placeholder="Enter a URL for the image...">

        <label for="browser_caption">Caption</label>
        <textarea id="browser_caption" name="query_caption" placeholder="Enter a caption for the photo..">
        </textarea>
     
        <button>
        Add photo
      </button>

      <div>
        <input type="hidden" id="comments_count_box" name="query_comments_count">
      </div>

      <div>
        <input type="hidden" id="likes_count_box" name="query_likes_count">
      </div>

      <div>
        <input type="hidden" id="owner_id_box" name="query_owner_id">
      </div>

    </form>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Image
        </th>

        <th>
          Caption
        </th>

        <th>
          Owner
        </th>

        <th>
          Posted
        </th>

        <th>
          Likes
        </th>
      </tr>

      <% @list_of_photos.each do |a_photo| %>
      <%= @list_of_photos.inspect 
      %>
      <tr>
        <td>
          <%= a_photo.image %>

        </td>

        <td>
          <%= a_photo.caption %>
        </td>

        <td>
          <%= a_photo.id %>
        </td>

        <td>
          <%= a_photo.likes_count %>
        </td>

        

        <td>
          <%= time_ago_in_words(a_photo.created_at) %> ago
        </td>

        <td>
          <a href="/photos/<%= a_photo.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
